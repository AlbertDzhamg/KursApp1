<Window x:Class="Курсовой_Будякова.View.CityAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовой_Будякова.View"
        mc:Ignorable="d"
        Title="Добавление города" Height="210" Width="210" ResizeMode="NoResize">
    <Grid>
        <Button Content="Закрыть" Margin="104,138,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="Button_Click_1"/>
        <Button Content="Сохранить" Margin="20,137,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="Button_Click"/>
        <TextBox Height="23" Margin="20,33,0,0" TextWrapping="Wrap" Text="{Binding _City}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>
        <Label Content="Город" HorizontalAlignment="Left" Margin="16,6.667,0,0" VerticalAlignment="Top"/>
        <Label Content="Регион" HorizontalAlignment="Left" Margin="16,65,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbRegion" Margin="20,93,0,0" VerticalAlignment="Top" DisplayMemberPath="_Region" HorizontalAlignment="Left" Width="150"/>

    </Grid>
</Window>
