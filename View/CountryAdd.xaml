<Window x:Class="Курсовой_Будякова.View.CountryAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовой_Будякова.View"
        mc:Ignorable="d"
        Title="Добавление страны" Height="195.5" Width="189" ResizeMode="NoResize">
    <Grid>
        <Button Content="Закрыть" Margin="0,0,14,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Button_Click_1"/>
        <Button Content="Сохранить" Margin="0,0,98,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="74" Click="Button_Click"/>
        <TextBox Height="23" Margin="10,33,10,0" TextWrapping="Wrap" Text="{Binding _CountryFull}" VerticalAlignment="Top"/>
        <Label Content="Полное название" HorizontalAlignment="Left" Margin="16,6.667,0,0" VerticalAlignment="Top"/>
        <Label Content="Сокращенное название" HorizontalAlignment="Left" Margin="15,64,0,0" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="10,93,10,0" TextWrapping="Wrap" Text="{Binding _CountryShort}" VerticalAlignment="Top"/>

    </Grid>
</Window>
